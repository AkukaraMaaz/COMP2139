@using SmartInventoryManagement.Models

@model IEnumerable<Order>

@{
    ViewBag.Title = "Orders";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewBag.Title</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Search Orders</h5>
        </div>
        <div class="card-body">
            <form asp-action="Search" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="form-group">
                        <label for="searchString" class="form-label">Search by Guest Name</label>
                        <input type="text" id="searchString" name="searchString" class="form-control" value="@ViewBag.SearchString" placeholder="Enter guest name..." />
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Order List</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No orders found. Click "Create New Order" to create your first order.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Guest Name</th>
                                <th>Order Date</th>
                                <th>Total Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.GuestName</td>
                                    <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>@order.TotalPrice.ToString("C")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>