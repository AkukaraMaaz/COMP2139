@{
    ViewData["Title"] = "Track Order";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Track Your Order</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Track" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" required 
                                   placeholder="Enter the email address used for your order">
                            <div class="form-text">Enter the email address you used when placing your order.</div>
                        </div>
                        <button type="submit" class="btn btn-primary">Track Order</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 