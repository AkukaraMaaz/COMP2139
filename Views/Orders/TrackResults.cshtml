@model IEnumerable<SmartInventoryManagement.Models.Order>
@{
    ViewData["Title"] = "Track Orders";
}

<div class="container">
    <h1>Your Orders</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No orders found.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Order #@order.Id</h5>
                                <span class="badge bg-@(order.Status.ToLower() switch {
                                    "pending" => "warning",
                                    "processing" => "info",
                                    "shipped" => "primary",
                                    "delivered" => "success",
                                    "cancelled" => "danger",
                                    _ => "secondary"
                                })">@order.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="mb-1"><strong>Order Date:</strong> @order.OrderDate.ToString("g")</p>
                            <p class="mb-1"><strong>Customer:</strong> @order.GuestName</p>
                            <p class="mb-1"><strong>Email:</strong> @order.Email</p>
                            <p class="mb-1"><strong>Total:</strong> @order.TotalPrice.ToString("C")</p>
                            <div class="mt-3">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-3">
        <a asp-action="Track" class="btn btn-secondary">Back to Track Orders</a>
    </div>
</div> 