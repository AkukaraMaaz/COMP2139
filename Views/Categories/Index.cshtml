@model IEnumerable<SmartInventoryManagement.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = category.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = category.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = category.Id })
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create", "Categories")" class="btn btn-primary">Create New Category</a>